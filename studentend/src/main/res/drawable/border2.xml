<?xml version="1.0" encoding="UTF-8"?>
<!-- 上角圆角边框，下角平边框 ,c2背景,c3边框，用于画线-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/c2" /><!-- 背景色-->
            <corners android:topRightRadius="30dp" /><!-- 圆角边框 -->
            <stroke android:width="1dp" android:color="@color/c3" /><!--c3边框-->
        </shape>
    </item>
</layer-list>